<h1>Login</h1>
<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          Email:
        </th>
        <%= form_tag '/login' do %>
          <th>
            <%= text_field_tag :email %>
          </th>
          <th>
            Password: 
          </th>
          <th>
            <%= password_field_tag :password %>
          </th>
          <th>
            <%= submit_tag "Submit" %>
          </th>
        <% end %>
      </tr>
    </thead>
  </table>
</div>


